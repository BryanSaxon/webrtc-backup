<%- include('shared/head'); -%>
<%- include('shared/navbar'); -%>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-12">
            <h1>
                <span>Chat Room</span>
                <small><%= id %></small>
            </h1>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <img id="theirStatic" src="https://media.giphy.com/media/iF3M9gPPCdulq/giphy.gif">

                    <div id="theirStreamContainer" class="embed-responsive embed-responsive-16by9 d-none">
                        <video id="theirStream" autoplay></video>
                    </div>

                    <img id="myStatic" class="mt-3" src="https://media.giphy.com/media/iF3M9gPPCdulq/giphy.gif">

                    <div id="myStreamContainer" class="embed-responsive embed-responsive-16by9 mt-3 d-none">
                        <video id="myStream" autoplay></video>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            Message Form
                        </div>

                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <label>Your Name</label>
                                    <input class="form-control" id="myName" type="text" autofocus />
                                </div>

                                <div class="form-group">
                                    <label>Your Message</label>
                                    <textarea class="form-control" id="myMessage" type="text" rows="3"></textarea>
                                </div>

                                <button class="btn btn-sm btn-primary" id="sendMessage" type="submit">
                                    Submit
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            Message Output
                        </div>
                        <div class="card-body" id="messageArea"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="../js/room.js"></script>

<%- include('shared/foot'); -%>
